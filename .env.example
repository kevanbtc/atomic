# Unykorn ESG System Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# BLOCKCHAIN & RPC CONFIGURATION
# ================================

# Your private key for deployment (keep secure!)
PRIVATE_KEY=your_private_key_here

# Infura Project ID (get from https://infura.io)
INFURA_PROJECT_ID=your_infura_project_id_here

# Alchemy API Key (get from https://alchemy.com) - optional but recommended
ALCHEMY_API_KEY=your_alchemy_api_key_here

# ================================
# BLOCKCHAIN EXPLORER API KEYS
# ================================

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key (for Polygon verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Arbiscan API Key (for Arbitrum verification)
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# ================================
# GAS & PERFORMANCE SETTINGS
# ================================

# Enable gas reporting (true/false)
REPORT_GAS=true

# Gas price in gwei (optional - will use network default if not set)
GAS_PRICE=20

# ================================
# IP PROTECTION SETTINGS
# ================================

# IPFS node endpoint (optional - defaults to localhost)
IPFS_ENDPOINT=http://localhost:5001

# Pinata API credentials (optional - for IPFS pinning service)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_here

# ================================
# FRONTEND & API CONFIGURATION  
# ================================

# API base URL for metadata
API_BASE_URL=https://api.unykorn.com

# Frontend domain for CORS
FRONTEND_DOMAIN=https://app.unykorn.com

# ================================
# BUSINESS & REVENUE SETTINGS
# ================================

# Revenue distribution addresses (will default to deployer if not set)
REVENUE_CREATOR_ADDRESS=your_creator_address_here
REVENUE_PLATFORM_ADDRESS=your_platform_address_here  
REVENUE_GOVERNANCE_ADDRESS=your_governance_address_here

# Subscription pricing (in USD, will be converted to token amounts)
DEVELOPER_PRICE_USD=299
ENTERPRISE_PRICE_USD=2999
INSTITUTIONAL_PRICE_USD=9999

# ================================
# SECURITY & COMPLIANCE
# ================================

# Enable security features
ENABLE_EMERGENCY_PAUSE=true
ENABLE_ACCESS_CONTROL=true

# Compliance settings
KYC_REQUIRED=true
AML_ENABLED=true

# ================================
# DEVELOPMENT & TESTING
# ================================

# Test account addresses (for development)
TEST_ACCOUNT_1=0x...
TEST_ACCOUNT_2=0x...
TEST_ACCOUNT_3=0x...

# Local network settings
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_CHAIN_ID=31337

# ================================
# MONITORING & ANALYTICS
# ================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Analytics endpoint
ANALYTICS_ENDPOINT=https://analytics.unykorn.com

# ================================
# EXAMPLE VALUES (DO NOT USE IN PRODUCTION)
# ================================

# PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# INFURA_PROJECT_ID=1234567890abcdef1234567890abcdef
# ALCHEMY_API_KEY=abcdef1234567890abcdef1234567890
# ETHERSCAN_API_KEY=ABCDEF1234567890ABCDEF1234567890AB